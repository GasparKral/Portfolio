---
interface Props {
    title: string;
    className?: string;
}

import { ViewTransitions } from 'astro:transitions';

import NavLink from '@components/NavLink.astro';

const { title } = Astro.props;
const currentDir = Astro.url.pathname.split('/').pop();
---

<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta
            name='description'
            content='Astro description'
        />
        <meta
            name='viewport'
            content='width=device-width'
        />
        <link
            rel='icon'
            type='image/svg+xml'
            href='/favicon.svg'
        />
        <meta
            name='generator'
            content={Astro.generator}
        />
        <meta
            name='author'
            content='Gaspar Gómez Kral'
        />
        <meta
            name='description'
            content='Portfolio de Gaspar Gómez Kral'
        />
        <meta
            name='keywords'
            content=' portfolio, gaspar, gómez, kral, frontend, developer, web, javaScript, Astro, React, tailwind'
        />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body>
        <main
            class='flex flex-col items-center justify-center h-screen transition-colors duration-500 dark:text-primary-light dark:bg-primary-dark bg-primary-light font-nunito'
        >
            <nav
                class='flex w-full justify-between items-center h-fit py-2 px-8 bg-transparent fixed top-0'
            >
                <menu class='flex gap-6 py-2'>
                    <NavLink
                        client:load
                        href='./'
                        title='About'
                        currentDir={currentDir}
                    />
                    <NavLink
                        client:load
                        href='./projects'
                        title='Projects & Experience'
                        currentDir={currentDir}
                    />
                    <NavLink
                        client:load
                        href='./contact'
                        title='Contact'
                        currentDir={currentDir}
                    />
                </menu>
            </nav>
            <slot />
        </main>
    </body>
</html>
